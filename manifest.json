{
    "name": "Make Searching Easier",
    "version": "1.0",
    "description": "Adds to legal database websites",
    "permissions": ["activeTab", "declarativeContent", "storage"],
    "options_page": "options.html",
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_security_policy": "script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self'; connect-src 'self' wss://*.firebaseio.com;",
    "page_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/plusMinus.png",
        "32": "images/plusMinus.png",
        "48": "images/plusMinus.png",
        "128": "images/plusMinus.png"
      }
    },
    "icons": {
      "16": "images/plusMinus.png",
      "32": "images/plusMinus.png",
      "48": "images/plusMinus.png",
      "128": "images/plusMinus.png"
    },
    "manifest_version": 2
}
